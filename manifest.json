{
    "manifest_version": 3,
    "name": "Epoch Copy",
    "version": "1.0",
    "description": "Copy the current epoch time to the clipboard with a shortcut.",
    "permissions": ["clipboardWrite", "activeTab", "scripting"],
    "background": {
      "service_worker": "epoch.js"
    },
    "commands": {
      "copy_epoch_time": {
        "suggested_key": {
          "default": "Ctrl+Shift+E",
          "mac": "Command+Shift+E"
        },
        "description": "Copy the current epoch time to the clipboard."
      }
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    }
  }
  